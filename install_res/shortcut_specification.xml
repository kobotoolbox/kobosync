<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
	<programGroup defaultName="Kobo" location="startMenu" />
	<shortcut name="KoboSync" programGroup="yes" desktop="no"
		applications="no" startMenu="yes" startup="no" workingDirectory="$INSTALL_PATH"
		target="${JAVA_HOME}${FILE_SEPARATOR}bin${FILE_SEPARATOR}java.exe"
		commandLine="-jar &quot;${INSTALL_PATH}${FILE_SEPARATOR}${APP_NAME}_${APP_VER}.jar"
		initialState="noShow" iconFile="$INSTALL_PATH/res/launcher-kobo-32.ico"
		description="Launch KoboSync">
	</shortcut>
	<shortcut name="KoboSync Launcher" programGroup="no"
		desktop="yes" applications="no" startMenu="no" startup="no"
		workingDirectory="$INSTALL_PATH"
		target="${JAVA_HOME}${FILE_SEPARATOR}bin${FILE_SEPARATOR}java.exe"
		commandLine="-jar &quot;${INSTALL_PATH}${FILE_SEPARATOR}${APP_NAME}_${APP_VER}.jar"
		iconFile="$INSTALL_PATH/res/launcher-kobo-32.ico" initialState="noShow"
		description="Launch the KoboSync">
	</shortcut>
	<shortcut name="KoboSync Uninstaller" programGroup="yes"
		desktop="no" applications="no" startMenu="yes" startup="no"
		target="${JAVA_HOME}${FILE_SEPARATOR}bin${FILE_SEPARATOR}java.exe"
		commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
		iconFile="%SystemRoot%\system32\SHELL32.dll" iconIndex="31"
		initialState="noShow" description="This uninstalls KoboSync">
	</shortcut>
</shortcuts>